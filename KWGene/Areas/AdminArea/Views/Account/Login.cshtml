        <div class="box">
            <div class="content-wrap">
                <h6>登录</h6>
                <form action="/Account/Login" method="post" name="LoginForm" id="LoginForm">
                    <input class="form-control" type="text" placeholder="用户名"  onkeyup="var reg = /^[\d\_a-zA-Z]+$/;if(!reg.test(this.value)) this.value='';" name="UserName" required="required" id="UserName">
                    <div class="ps"></div>
                    <input class="form-control" type="password" placeholder="密码" name="psw" id="psw"  required="required">
                    <div class="ps"></div>
                    <input type="submit" class="btn-glow primary login" value="登录" />
                </form>
            </div>
        </div>
    </div>
